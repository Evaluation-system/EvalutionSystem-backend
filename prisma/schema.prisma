// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int            @id @default(autoincrement())
  name String?
  email    String         @unique
  password String?
  role     Role           @default(user)
  projects UserProjects[]
}

model UserProjects {
  id               Int                @id @default(autoincrement())
  title            String
  description      String?
  client           String?
  User             User?              @relation(fields: [UserId], references: [id])
  UserId           Int?
  procing          Procings[]
  tasks            Tasks[]
  employeePayments EmployeePayments[]
  pathImage String? 
}

model Procings {
  id        Int           @id @default(autoincrement())
  cost      String
  value     Int
  Project   UserProjects? @relation(fields: [ProjectId], references: [id])
  ProjectId Int?
}

model Tasks {
  id        Int           @id @default(autoincrement())
  task      String
  time      Int
  Project   UserProjects? @relation(fields: [ProjectId], references: [id])
  ProjectId Int?
}

model EmployeePayments {
  id        Int           @id @default(autoincrement())
  employee  String
  salary    Int
  Project   UserProjects? @relation(fields: [ProjectId], references: [id])
  ProjectId Int?
}

enum Role {
  user
  admin
}
